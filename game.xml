    <name>Nail</name>
    <version>1.5e - n7.2</version>

    <authors>
        <author>
            <name>Rixiot</name>
            <role>Original game design and idea</role>
        </author>
        <author>
            <name>TrazLander</name>
            <role>Original game design and idea</role>
